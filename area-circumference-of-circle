// find the area and circumference of a circle by taking input radius from the user.
#include <stdio.h>

int main() {
    float radius, area, circumference;
    const float pi = 3.14159; // Approximate value of pi

    // Input from the user
    printf("Enter the radius of the circle: ");
    scanf("%f", &radius);

    // Calculate area and circumference
    area = pi * radius * radius; // Formula for area of a circle: π * r^2
    circumference = 2 * pi * radius; // Formula for circumference of a circle: 2 * π * r

    // Display the results
    printf("The area of the circle is: %.2f\n", area);
    printf("The circumference of the circle is: %.2f\n", circumference);

    return 0;
}
