#include <stdio.h>

void main()
{
    int num,fact=1,i,sum1=0,sum2=0;
    
    printf("enter the number:");
    scanf("%d",&num);
    
    for(i=1;i<=num;i++)
    {
        if(i/2==0)
        {
            sum1 = sum1+i;
            
        }
        else
        {
            sum2 = sum2+i;
            
        }
    }
    printf("\nSum of even number between 1 to %d is %d",num,sum1);
    printf("\nSum of odd number between 1 to %d is %d",num,sum2);
    
}
