#include <stdio.h>

int main() {
    int n = 4; // Number of rows in the pattern

    // Loop to iterate through each row
    for (int i = 1; i <= n; i++) {
        // Loop to print numbers from 1 to i in each row
        for (int j = 1; j <= i; j++) {
            printf("%d ", j);
        }
        // Move to the next line after printing each row
        printf("\n");
    }

    return 0;
}
